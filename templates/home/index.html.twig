{% extends 'base.html.twig' %}

{% block title %}{{ 'home.title'|trans }}{% endblock %}

{% block stylesheets %}
            <!-- Add this line to include Bootstrap CSS -->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ 'home.welcome'|trans }}</h1>

        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
            <a class="nav-link" href="{{ path('matiere') }}">{{ 'matiere.LabelName'|trans }}</a>
            <a class="nav-link" href="{{ path('home') }}">{{ 'home.title'|trans }}</a>
        </nav>

        {# Display flash messages #}
        {% if app.flashes('success') %}
            <div class="alert alert-success">
                {{ app.flashes('success')[0] }}
            </div>
        {% endif %}

        {# Afficher le formulaire d'ajout de note #}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ajouter une Note</h5>

                {{ form_start(form) }}
                
                {# Liste déroulante de toutes les matières #}

                {# Input pour saisir la note #}
                {{ form_row(form.Note) }}

                {# Bouton de soumission #}
                <button type="submit" class="btn btn-primary">Ajouter la Note</button>

                {{ form_end(form) }}
            </div>
        </div>

        {# ... (le reste de votre contenu) ... #}
    </div>
{% endblock %}
